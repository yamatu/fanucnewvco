# Example Nginx config for running on the HOST (outside docker).
#
# This replaces the docker-compose nginx service so you can use host TLS certs.
# It proxies:
#   - Next.js (container) at 127.0.0.1:${FRONTEND_PORT}
#   - Go API (container) at 127.0.0.1:${BACKEND_PORT}
#
# Notes:
# - Put your real ssl_certificate / ssl_certificate_key paths here.
# - Make sure docker-compose.yml binds FRONTEND_PORT/BACKEND_PORT to 127.0.0.1.

upstream fanuc_frontend {
  server 127.0.0.1:3000;
  keepalive 32;
}

upstream fanuc_backend {
  server 127.0.0.1:8080;
  keepalive 32;
}

server {
  listen 80;
  server_name _;

  # If you want HTTP->HTTPS redirect, uncomment:
  # return 301 https://$host$request_uri;

  client_max_body_size 500m;

  location /_next/static/ {
    proxy_pass http://fanuc_frontend;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    expires 1y;
    access_log off;
    add_header Cache-Control "public, max-age=31536000, immutable";
  }

  location /api/ {
    proxy_pass http://fanuc_backend;
    proxy_http_version 1.1;
    client_max_body_size 500m;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_connect_timeout 60s;
    proxy_send_timeout 1800s;
    proxy_read_timeout 1800s;
    proxy_buffering off;
    proxy_request_buffering off;
  }

  location /uploads/ {
    proxy_pass http://fanuc_backend;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    expires 7d;
  }

  location = /xmlsitemap.php {
    proxy_pass http://fanuc_backend;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  location = /health {
    proxy_pass http://fanuc_backend/health;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    access_log off;
  }

  location / {
    proxy_pass http://fanuc_frontend;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Dev-friendly: avoid stale HTML after admin edits.
    proxy_hide_header Cache-Control;
    add_header Cache-Control "no-store" always;
  }
}
